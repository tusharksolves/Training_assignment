<odoo>
    <data noupdate="0">

        <!-- Patients can only see their own appointments -->
        <record id="rule_patient_see_own_appointments" model="ir.rule">
            <field name="name">Patient - See Own Appointments</field>
            <field name="model_id" ref="model_hospital_appointment"/>
            <field name="domain_force">[('patient_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('tushar_hospital.group_hospital_patient'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
        <record id="rule_patient_see_own_details" model="ir.rule">
            <field name="name">Patient - See Own details</field>
            <field name="model_id" ref="model_hospital_patient"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('tushar_hospital.group_hospital_patient'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="rule_doctor_see_own_appointments" model="ir.rule">
            <field name="name">Doctor - See Own Appointments</field>
            <field name="model_id" ref="model_hospital_appointment"/>
            <field name="domain_force">[('doctor_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('tushar_hospital.group_hospital_doctor'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="rule_doctor_see_own_details" model="ir.rule">
            <field name="name">Patient - See Own details</field>
            <field name="model_id" ref="model_hospital_doctor"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('tushar_hospital.group_hospital_doctor'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

    </data>
</odoo>
