<!-- views/doctor_views.xml -->
<odoo>
    <record id="view_doctor_list" model="ir.ui.view">
        <field name="name">hospital.doctor.list</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="specialization"/>
                <field name="doctor_type"/>
            </list>
        </field>
    </record>

    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="specialization"/>
                        <field name="doctor_type"/>
<!--                        <field name="user_id"/>-->
                    </group>
                    <notebook>
                        <page string="Appointments">
                            <field name="appointment_ids" readonly="1">
                                <list>
                                    <field name="patient_id"/>
                                    <field name="appointment_date"/>
                                </list>
                            </field>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to open the doctor model -->
    <record id="action_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_hospital_doctor"
                  name="Doctors"
                  parent="menu_hospital_root"
                  action="action_doctor"
                  groups="tushar_hospital.group_hospital_admin,tushar_hospital.group_hospital_doctor"
                  sequence="20"/>

</odoo>
