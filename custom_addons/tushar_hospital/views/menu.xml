<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Root Menu -->
        <menuitem id="menu_hospital_root" name="Hospital"/>

        <!-- Patients Parent Menu -->
        <menuitem id="menu_hospital_patient" name="Patients" parent="menu_hospital_root"/>


        <!-- Children Patients -->
        <menuitem id="menu_children_patients" name="Children Patients" parent="menu_hospital_patient"
                  action="tushar_hospital.action_children_patients"/>

        <!-- Adult Patients -->
        <menuitem id="menu_adult_patients" name="Adult Patients" parent="menu_hospital_patient"
                  action="tushar_hospital.action_adult_patients"/>

        <!-- Menu Item for Appointments -->
        <menuitem id="menu_hospital_appointment"
                  name="Appointments"
                  parent="menu_hospital_root"
                  action="action_hospital_appointment"
                  sequence="10"/>


        <!-- Action for Appointment list + Form View -->
        <record id="action_hospital_appointment" model="ir.actions.act_window">
            <field name="name">Appointments</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
