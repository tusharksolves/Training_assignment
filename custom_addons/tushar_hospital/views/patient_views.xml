<odoo>
    <!-- Actions -->
    <record id="action_children_patients" model="ir.actions.act_window">
        <field name="name">Children Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('age', '&lt;', 18)]</field>
        <field name="view_id" ref="view_hospital_patient_list"/>
    </record>

    <record id="action_adult_patients" model="ir.actions.act_window">
        <field name="name">Adult Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('age', '&gt;=', 18)]</field>
        <field name="view_id" ref="view_hospital_patient_list"/>
    </record>

    <!-- list View -->
    <record id="view_hospital_patient_list" model="ir.ui.view">
        <field name="name">hospital.patient.list</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <list string="Patients">
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="disease_ids" widget="many2many_tags" />

            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <header>
                    <button name="action_book_appointment"
                            string="Book Appointment"
                            type="object"
                            class="btn-primary"/>
                    <button name="action_open_cancel_wizard"
                            string="Cancel Appointment"
                            type="object"
                            class="btn-danger"/>
                </header>
                <sheet>
                    <notebook>
                        <page string="Patient Info">
                            <group>
                                <field name="name"/>
                                <field name="dob"/>
                                <field name="age" readonly="1"/>
                                <field name="gender"/>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="disease_ids" widget="many2many_tags" />

                            </group>
                        </page>
                        <page string="Appointments">
                            <field name="appointment_ids" >
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
