    <record id="view_appointment_cancel_wizard_form" model="ir.ui.view">
        <field name="name">hospital.appointment.cancel.wizard.form</field>
        <field name="model">hospital.appointment.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Appointment">
                <group>
                    <field name="patient_id"/>
                    <field name="appointment_id"/>
                    <field name="cancel_reason"/>
                </group>
                <footer>
                    <button name="action_cancel" string="Submit" type="object" class="btn-primary"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_appointment_cancel_wizard" model="ir.actions.act_window">
        <field name="name">Cancel Appointment</field>
        <field name="res_model">hospital.appointment.cancel.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
